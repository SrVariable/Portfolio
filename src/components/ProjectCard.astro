---
import { PROJECTS } from "../const/project.ts";
---

<section class="m-4" id="projects">
  <h1 class="text-3xl mb-4 font-bold">ðŸŒŠProjectsðŸŒŠ</h1>
  {
    PROJECTS.map(({ name, description, image, technologies, source, url }) => (
      <article class="flex flex-col bg-white text-theme-black p-4 mb-8 rounded-xl">
        <h1 class="text-2xl font-bold mb-4">{name}</h1>
        <ul class="flex flex-row flex-wrap gap-2 mb-4 space-y-1 max-w-60">
          {technologies.map((tech) => (
            <li>
              <span class="bg-theme-blue text-theme-white px-2 py-1 rounded-full hover:text-theme-yellow">
                {tech}
              </span>
            </li>
          ))}
        </ul>
        {image && (
          <img
            class="rounded-sm mb-2"
            src={image}
            alt={`Screenshot of ${name}`}
          />
        )}
        <p class="mb-4">{description}</p>
        {(source || url) && (
          <footer>
            {source && (
              <a
                class="max-w-fit bg-primary text-white hover:bg-primary-shade p-2 rounded-xl"
                href={source}
                target="_blank"
                rel="noopener noreferrer"
              >
                Source
              </a>
            )}
            {url && (
              <a
                class="max-w-fit bg-primary text-white hover:bg-primary-shade p-2 rounded-xl ml-4"
                href={url}
                target="_blank"
                rel="noopener noreferrer"
              >
                Preview
              </a>
            )}
          </footer>
        )}
      </article>
    ))
  }
</section>
